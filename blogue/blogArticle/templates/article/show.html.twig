{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.Titre }}</td>
            </tr>
            <tr>
                <th>Resumé</th>
                <td>{{ article.resume }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ article.user }}</td>
            </tr>
            <tr>
                <th>Image</th>
              <td><img width="20%" src="{{ asset('images/article/')}}{{ article.image}}" /></td>
            </tr>
            <tr>
                <th>Contenue</th>
                <td>{{ article.contenue }}</td>
            </tr>
        </tbody>
    </table>

<hr>
<br>
<h4>Les Commentaire <h4>
<br>

<h4>Listing des commentaires</h4>

{% for commentaire in commentaires %}

<h5>Posté par {{commentaire.user}} le {{commentaire.createdAt|date('Y-m-d') }} </h5>
<i>{{commentaire.contenu}}</i>

{% endfor %}

{{ include('commentaires/_form.html.twig') }}
<br>
<hr>

    

